{
    "targetDefaults": {
        "test": {
            "dependsOn": [
                "build"
            ]
        },
        "verify": {
            "dependsOn": [
                "build"
            ]
        },
        "verify:fix": {
            "dependsOn": [
                "build"
            ]
        },
        "build": {
            "dependsOn": [
                "^build",
                {
                    "projects": [
                        "@captainpants/rollup-plugin-sweeter"
                    ],
                    "target": "build",
                    "params": "ignore"
                }
            ],
            "outputs": [
                "{projectRoot}/build"
            ]
        },
        "watch": {
            "dependsOn": [
                "^build",
                {
                    "projects": [
                        "@captainpants/rollup-plugin-sweeter"
                    ],
                    "target": "build",
                    "params": "ignore"
                }
            ]
        },
        "watch-test": {
            "dependsOn": [
                "^build"
            ],
            "executor": "@captainpants/nx-fire-and-forget"
        },
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "production",
                "^production"
            ]
        },
        "@nx/eslint:lint": {
            "cache": true,
            "inputs": [
                "default",
                "{workspaceRoot}/.eslintrc.json",
                "{workspaceRoot}/.eslintignore",
                "{workspaceRoot}/eslint.config.cjs"
            ]
        },
        "@nx/vite:test": {
            "cache": true,
            "inputs": [
                "default",
                "^production"
            ]
        }
    },
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": [
            "{projectRoot}/**/*",
            "sharedGlobals"
        ],
        "sharedGlobals": [],
        "production": [
            "default",
            "!{projectRoot}/eslint.config.mjs",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/src/test-setup.[jt]s"
        ]
    }
}