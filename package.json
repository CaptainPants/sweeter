{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
  "type": "module",
  "scripts": {
    "clean": "pnpm exec nx reset; lerna run clean",
    "build": "lerna run build",
    "verify:fix": "lerna run verify:fix",
    "verify": "lerna run verify",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "watch-libs": "node --experimental-strip-types ./tools/watch-pnpm-workspace/src/index.ts run watch --group libs",
    "watch-example": "node --experimental-strip-types ./tools/watch-pnpm-workspace/src/index.ts run watch --group arktype",
    "watch-arktype-example": "node --experimental-strip-types ./tools/watch-pnpm-workspace/src/index.ts run watch --group arktype-example",
    "watch-rollup-plugin-usage": "node --experimental-strip-types ./tools/watch-pnpm-workspace/src/index.ts run watch --group rollup-plugin-usage",
    "publish-all": "lerna run clean && lerna run verify && pnpm -r publish --access public",
    "publish-all:dry-run": "pnpm run publish-all --dry-run",
    "set-versions": "pnpm -r exec npm version",
    "generate-docs": "pnpm run build && typedoc --options typedoc.json",
    "rebuild": "pnpm run clean && pnpm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@swc-node/register": "~1.9.2",
    "@swc/cli": "~0.3.14",
    "@swc/core": "~1.5.29",
    "@swc/helpers": "~0.5.15",
    "@types/node": "22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@typescript/analyze-trace": "^0.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "glob": "^11.0.1",
    "jsdom": "^25.0.1",
    "lerna": "^8.1.9",
    "nx": "20.3.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.7",
    "vite-plugin-circular-dependency": "^0.5.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "pnpm": "9.15.3"
  }
}
