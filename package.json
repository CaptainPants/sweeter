{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@8.6.7",
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "verify:fix": "lerna run verify:fix",
    "verify": "lerna run verify",
    "format": "lerna run format",
    "test": "lerna run test",
    "watch-libs": "lerna run --stream --concurrency= watch --scope @captainpants/wireyui-core --scope @captainpants/wireyui-web",
    "publish-all": "lerna run clean && lerna run verify && pnpm -r publish --access public",
    "publish-all:dry-run": "pnpm run publish-all --dry-run",
    "set-versions": "pnpm -r exec npm version"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.6.1",
    "lerna": "^7.1.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "typed-assert": "^1.0.9",
    "typescript": "^5.1.6"
  },
  "engines": {
    "pnpm": "8.6.7"
  }
}
