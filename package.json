{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "scripts": {
    "clean": "pnpm exec nx reset; lerna run clean",
    "build": "lerna run build",
    "verify:fix": "lerna run verify:fix",
    "verify": "lerna run verify",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "test": "lerna run test",
    "watch-libs": "lerna watch --scope @captainpants/sweeter-utilities --scope @captainpants/sweeter-core --scope @captainpants/sweeter-web --scope @captainpants/sweeter-web-gummybear --scope @captainpants/sweeter-arktype-modeling --scope @captainpants/sweeter-web-arktype --scope @captainpants/rollup-plugin-sweeter --scope @captainpants/arktype-example-data -- pnpm run build --scope \\$LERNA_PACKAGE_NAME",
    "watch-example": "lerna run watch --scope @captainpants/sweeter-example",
    "watch-arktype-example": "lerna run watch --scope @captainpants/sweeter-arktype-example",
    "watch-rollup-plugin-usage": "lerna watch --scope @captainpants/sweeter-core --scope @captainpants/rollup-plugin-sweeter --scope @captainpants/rollup-plugin-sweeter-usage -- pnpm run build --scope \\$LERNA_PACKAGE_NAME",
    "publish-all": "lerna run clean && lerna run verify && pnpm -r publish --access public",
    "publish-all:dry-run": "pnpm run publish-all --dry-run",
    "set-versions": "pnpm -r exec npm version",
    "generate-docs": "pnpm run build && typedoc --options typedoc.json",
    "rebuild": "pnpm run clean && pnpm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@typescript/analyze-trace": "^0.10.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "glob": "^11.0.0",
    "jsdom": "^25.0.1",
    "lerna": "^8.1.9",
    "nx": "20.3.1",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-circular-dependency": "^0.5.0",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "pnpm": "8.14.1"
  }
}
