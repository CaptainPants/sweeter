{
    "name": "@captainpants/wireyui-core",
    "version": "0.0.3",
    "repository": "https://github.com/CaptainPants/wireyui-core",
    "author": "Stuart Murray <captainpantsnpm@gmail.com>",
    "license": "MIT",
    "private": false,
    "type": "module",
    "packageManager": "pnpm@8.6.7",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        ".": "./build/index.js"
    },
    "scripts": {
        "typecheck": "tsc",
        "format": "prettier --write src",
