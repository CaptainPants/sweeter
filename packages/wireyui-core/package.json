{
    "name": "@captainpants/wireyui-core",
    "version": "0.0.3",
    "repository": "https://github.com/CaptainPants/wireyui-core",
    "author": "Stuart Murray <captainpantsnpm@gmail.com>",
    "license": "MIT",
    "private": false,
    "type": "module",
    "packageManager": "pnpm@8.6.7",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        ".": "./build/index.js",
        "./jsx-runtime": "./build/jsx-runtime.js"
    },
    "scripts": {
        "clean": "rimraf build && rimraf tsconfig.tsbuildinfo",
        "typecheck": "tsc",
        "format": "prettier --write src",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "jest --silent=false src",
        "verify:fix": "corepack pnpm run format && corepack pnpm run lint --fix && corepack pnpm run test && corepack pnpm run typecheck",
        "verify": "corepack pnpm run lint && corepack pnpm run test && corepack pnpm run typecheck",
        "watch": "pnpm run copy_jsx_defs && tsc --watch",
        "build": "pnpm run copy_jsx_defs && tsc && rimraf --glob \"./build/**/*.test.{d.ts,js}\"",
        "copy_jsx_defs": "copyfiles -u 1 ./src/definitions.d.ts ./build"
    },
    "engines": {
        "pnpm": "8.6.7"
    }
}
