{
    "name": "@captainpants/wireyui-web",
    "version": "0.0.3",
    "repository": "https://github.com/CaptainPants/wireyui-core",
    "author": "Stuart Murray <captainpantsnpm@gmail.com>",
    "license": "MIT",
    "private": false,
    "type": "module",
    "packageManager": "pnpm@8.6.7",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        ".": {
            "import": "./build/index.js",
            "require": "./build/cjs/index.js"
        },
        "./jsx-runtime": {
            "import": "./build/runtime/jsx-runtime.js",
            "require": "./build/runtime/cjs/jsx-runtime.js"
        }
    },
    "scripts": {
        "trace": "pnpm exec tsc --noEmit --incremental false --generateTrace .trace && pnpm exec analyze-trace .trace --forceMillis 1000 --skipMillis 200",
        "clean": "rimraf build; rimraf *.tsbuildinfo; rimraf .rollup.cache; :",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write src",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "jest --silent=false src",
        "test:debug": "node --inspect-brk ../../node_modules/jest/bin/jest.js --silent=false",
        "verify:fix": "corepack pnpm run format && corepack pnpm run lint --fix && corepack pnpm run test && corepack pnpm run typecheck",
        "verify": "corepack pnpm run lint && corepack pnpm run test && corepack pnpm run typecheck",
        "watch": "tsc --project ./tsconfig.build.json --watch",
        "build:esm": "tsc --project ./tsconfig.build.json",
        "build:cjs": "rollup --config ./rollup.config.mjs",
        "build": "pnpm run build:esm && pnpm run build:cjs"
    },
    "engines": {
        "pnpm": "8.6.7"
    },
    "dependencies": {
        "@captainpants/wireyui-core": "workspace:^"
    },
    "devDependencies": {
        "jest-environment-jsdom": "^29.6.4"
    }
}
